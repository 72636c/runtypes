{
  "name": "runtypes",
  "version": "0.9.1",
  "description": "Runtime validation for static types",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "build": "tsc --pretty",
    "test": "npm run build && jest --verbose --coverage",
    "coveralls": "cat ./coverage/remapped/lcov.info | ./node_modules/.bin/coveralls",
    "develop": "jest --watchAll",
    "release": "npm run release:patch",
    "release:patch": "xyz --increment patch",
    "release:minor": "xyz --increment minor",
    "release:major": "xyz --increment major"
  },
  "author": "Thomas Crockett",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^18.1.1",
    "coveralls": "^2.12.0",
    "jest": "^19.0.2",
    "ts-jest": "^19.0.0",
    "typescript": "2.2.1",
    "xyz": "^2.1.0"
  },
  "keywords:": [
    "runtime",
    "type",
    "validation",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/pelotom/runtypes"
  },
  "jest": {
    "verbose": false,
    "testRegex": ".*/*.spec.ts$",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "transform": {
      "\\.ts$": "<rootDir>/node_modules/ts-jest/preprocessor"
    },
    "testResultsProcessor": "<rootDir>/node_modules/ts-jest/coverageprocessor.js",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "validation-error\\.ts"
    ],
    "testEnvironment": "node"
  }
}
