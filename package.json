{
  "name": "runtypes",
  "version": "0.0.3",
  "description": "Runtime type validation for TypeScript",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "build": "tsc --pretty",
    "test": "jest --verbose",
    "develop": "jest --watchAll",
    "release": "npm run release:patch",
    "release:patch": "npm run build && xyz --increment patch",
    "release:minor": "npm run build && xyz --increment minor",
    "release:major": "npm run build && xyz --increment major"
  },
  "author": "Thomas Crockett",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^16.0.4",
    "jest": "^18.1.0",
    "ts-jest": "^18.0.2",
    "typescript": "^2.1.5",
    "xyz": "^2.1.0"
  },
  "keywords:": [
    "runtime",
    "type",
    "validation",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/pelotom/runtypes"
  },
  "jest": {
    "verbose": false,
    "testRegex": ".*/*.spec.ts$",
    "moduleFileExtensions": ["js", "ts"],
    "transform": { "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor" },
    "testEnvironment": "node"
  }
}
